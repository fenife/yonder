                "id": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "title_en": {
                    "type": "string"
                },
                "updated_at": {
                    "description": "同上",
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/do.UserTiny"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        },
        "do.UserTiny": {
            "type": "object",
